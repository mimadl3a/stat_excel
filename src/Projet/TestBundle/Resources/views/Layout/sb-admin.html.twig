<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}RH Manager{% endblock %}</title>
        {% block stylesheets %}
        	<meta name="viewport" content="width=device-width, initial-scale=1">
        	<!-- Bootstrap core CSS -->
		    <link href="{{ asset('bootstrap/css/bootstrap.css') }}" rel="stylesheet">
		
		    <!-- Add custom CSS here -->
		    <link href="{{ asset('sb-admin/css/sb-admin.css') }}" rel="stylesheet">
		    <link rel="stylesheet" href="{{ asset('sb-admin/font-awesome/css/font-awesome.min.css') }}">
		    
		    
		    <!-- JavaScript -->
		    <script src="{{ asset('js/jquery.min.js') }}"></script>
		
		    
		    
        	<script src="{{ asset('bootstrap/js/bootstrap.js') }}"></script>
        	<script type="text/javascript" src="{{ asset('js/jquery.tablesorter.min.js') }}"></script>
		    
		    
		    <link rel="stylesheet" href="{{ asset('css/ringing.css')}}">
		    <link rel="stylesheet" href="{{ asset('css/jquery-ui.css')}}">
        	<script src="{{ asset('js/jquery-ui.js')}}"></script>
		    
		    
        {% endblock %}
        
        
        
                
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
        	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="">Manager</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
          <ul class="nav navbar-nav side-nav">
            <li {% if "p_homepage" in app.request.attributes.get('_route') %}class="active"{% endif %}><a href="{{ path('p_homepage') }}"><span class="glyphicon glyphicon-upload"></span> Transfert de donn&eacute;es</a></li>
            <li {% if "p_stats_hf_nbr" in app.request.attributes.get('_route') %}class="active"{% endif %}><a href="{{ path('p_stats_hf_nbr') }}"><span class="glyphicon glyphicon-adjust"></span> Calculs normaux</a></li>
            <li {% if "p_stats_date" in app.request.attributes.get('_route') %}class="active"{% endif %}><a href="{{ path('p_stats_date') }}"><span class="glyphicon glyphicon-adjust"></span> Calculs par date</a></li>
            <li {% if "indicateur_stats" in app.request.attributes.get('_route') %}class="active"{% endif %}><a href="{{ path('indicateur_stats') }}"><span class="glyphicon glyphicon-adjust"></span> Calcul des indicateurs</a></li>
            <li {% if "export_stats" in app.request.attributes.get('_route') %}class="active"{% endif %}><a href="{{ path('export_stats') }}"><span class="glyphicon glyphicon-download"></span> Exporter PDF</a></li>
          </ul>

          <ul class="nav navbar-nav navbar-right navbar-user">
            
            {% if app.session.get('nbr_rdv') or  app.session.get('nbr_cv_tr')%}
            
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              	
              	<img class="bell" src="{{ asset('images/bell.png') }}" />
              	Notification <b class="caret"></b></a>
              	<ul class="dropdown-menu">
              	
              	
              	{% if app.session.get('nbr_rdv')>0 %}
              	<li class="divider"></li>
                <li><a href="{{ path('calendar') }}">
                	<i class="glyphicon glyphicon-calendar"></i> 
                		Vous avez <b class="badge">{{ app.session.get('nbr_rdv') }}</b> RDV &agrave; venir (+7 jours)</a>
                </li>
                <li class="divider"></li>
                {% endif %}
                
              </ul>
            </li>
            {% endif %}
            
            
            <li class="dropdown {% if "stats" in app.request.attributes.get('_route') %}active{% endif %}">
              <a href=""><span class="glyphicon glyphicon-stats"></span>  Statistiques</a>
            </li>
            <li class="dropdown {% if "calendar" in app.request.attributes.get('_route') %}active{% endif %}">
              <a href="{{ path('calendar') }}"><span class="glyphicon glyphicon-calendar"></span>  Calendrier RDV</a>
            </li>
            
            <li class="dropdown user-dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>   <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="{{ path('logout') }}"><i class="fa fa-power-off"></i> Sortir</a></li>
              </ul>
            </li>
            
          </ul>
        </div><!-- /.navbar-collapse -->
      </nav>
        {% endblock %}
        
        {% block javascript %}		    
		    <script>		
				$(".alert").delay(6000).toggle( "blind" );
			</script>
			
			
        	<div id="dialog-confirm" title="Supression" style="display: none;font-size:12px;">
				<p>
					<span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>
					<label id="msg-alert"></label>					
				</p>
			</div>
		    
        {% endblock %}
        
        
        
        
    </body>
</html>
